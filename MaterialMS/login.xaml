<Window x:Class="MaterialMS.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MaterialMS"
        mc:Ignorable="d"
        Title="管理员登录" Height="450" Width="800">
    <Grid>
        <Label Content="用户名" HorizontalAlignment="Left" Margin="291,142,0,0" VerticalAlignment="Top" />
        <Label Content="密码" HorizontalAlignment="Left" Margin="295,182,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="25" Margin="344,142,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Name="txtUserName"/>
        <Button Content="登录" HorizontalAlignment="Left" Margin="360,244,0,0" VerticalAlignment="Top" Width="74" Click="Button_Click"/>
        <Label Name="labNameMsg" HorizontalAlignment="Left" Margin="495,142,0,0" VerticalAlignment="Top"/>
        <Label Name="labPwdMsg" HorizontalAlignment="Left" Margin="495,182,0,0" VerticalAlignment="Top"/>
        <PasswordBox HorizontalAlignment="Left" Margin="344,182,0,0" VerticalAlignment="Top" Width="120" Height="25" Name="txtPwd"/>
        <Grid.Background>
            <ImageBrush ImageSource="Resources/login_bg.png" Stretch="Fill"/>
        </Grid.Background>
    </Grid>

</Window>
